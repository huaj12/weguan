<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_pic" />

    <Button
        android:id="@+id/upload_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_by_album" />

    <Button
        android:id="@+id/upload_camera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_by_camera" />

    <Button
        android:id="@+id/delete_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_pic"
        android:visibility="gone" />

</LinearLayout>