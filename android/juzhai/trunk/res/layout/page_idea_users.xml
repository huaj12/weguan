<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_side_bar"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/idea_users_content_begin"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/idea_users_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idea_users_content_end"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <com.juzhai.android.core.widget.list.JuzhaiRefreshListView
        android:id="@+id/idea_users_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="36dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:focusable="true"
        android:fadingEdge="none" />

</RelativeLayout>