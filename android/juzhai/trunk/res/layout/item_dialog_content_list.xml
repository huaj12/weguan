<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_color_bg">
    <RelativeLayout android:id="@+id/dialog_content_layout" android:layout_width="fill_parent"
   					 android:layout_height="wrap_content" >
	<ImageView android:id="@+id/message_left_logo" 
	       android:layout_width="40dp"
    	   android:layout_height="40dp"
    	   android:background="@drawable/user_face_unload"
    	   android:layout_alignParentLeft="true" 
    	   android:layout_marginTop="10dp"
    	   android:layout_marginLeft="10dp"
    	   android:layout_marginBottom="10dp"
    	   android:layout_marginRight="7dp"/>
	<RelativeLayout   android:layout_width="wrap_content"
			    	  android:layout_height="wrap_content"
			    	  android:id="@+id/message_left_layout"
			    	  android:layout_toRightOf="@+id/message_left_logo"
			    	  android:layout_marginTop="10dp"
			    	  android:layout_marginRight="60dp"
					  android:paddingLeft="16dp"
			    	  android:paddingTop="9dp"
			    	  android:paddingRight="13dp"
			    	  android:paddingBottom="9dp"
			    	  android:background="@drawable/mess_to_me_item_bg">
			    	  <ImageView 
			    	      android:id="@+id/message_left_image"
			    	      android:layout_width="40dp"
			    	  	  android:layout_height="40dp"
			    	  	  android:layout_alignParentTop="true"
			    	  	  android:visibility="gone"
			    	  	  />
	    <TextView android:layout_width="wrap_content"
	    	  android:layout_height="wrap_content"
	    	  android:id="@+id/message_left_content"
	    	  android:textColor="@color/black"
	    	  android:gravity="left"
	    	  android:textSize="14sp"
	    	  android:lineSpacingExtra="2dp"
	    	   android:layout_below="@+id/message_left_image"
	    	 />
	</RelativeLayout>
	<RelativeLayout 
	    	  android:layout_width="wrap_content"
	    	  android:layout_height="wrap_content"
	    	  android:id="@+id/message_rigth_layout"
	    	  android:layout_marginTop="10dp"
	    	  android:layout_marginLeft="60dp"
	    	  android:layout_toLeftOf="@+id/message_rigth_logo"
	    	  android:paddingLeft="14dp"
	    	  android:paddingTop="9dp"
	    	  android:paddingRight="16dp"
	    	  android:paddingBottom="9dp" 
	    	  android:background="@drawable/mess_send_ta_item_bg">
	    	 <ImageView 
			    	      android:id="@+id/message_right_image"
			    	      android:layout_width="40dp"
			    	  	  android:layout_height="40dp"
			    	  	  android:visibility="gone"
			    	  	  android:layout_alignParentTop="true"
			    	  	  />
	<TextView android:layout_width="wrap_content"
	    	  android:layout_height="wrap_content"
	    	  android:id="@+id/message_rigth_content"
	    	  android:textSize="14sp"
	    	  android:textColor="@color/black"
	    	  android:gravity="left"
	    	  android:lineSpacingExtra="2dp"
	    	  android:layout_below="@+id/message_right_image"
	    	/>
	</RelativeLayout>
	<ImageView 	 android:layout_width="wrap_content"
	    		 android:layout_height="wrap_content"
	    		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"
	    		 android:id="@+id/message_left_icon"
	    		 android:layout_marginLeft="15dp"
	    		 android:visibility="gone"
	    		 />
	<ImageView android:id="@+id/message_rigth_logo" 
	       android:layout_width="40dp"
    	   android:layout_height="40dp"
    	   android:background="@drawable/user_face_unload"
    	   android:layout_alignParentRight="true" 
    	   android:layout_marginTop="10dp"
    	   android:layout_marginLeft="7dp"
    	   android:layout_marginBottom="10dp"
    	   android:layout_marginRight="10dp"/>
	</RelativeLayout>
	<TextView android:layout_width="wrap_content"
	    	  android:layout_height="wrap_content"
	    	  android:layout_below="@+id/dialog_content_layout"
	    	  android:layout_centerHorizontal="true"
	    	  android:layout_marginTop="10dp"
	    	  android:layout_marginBottom="10dp"
	    	  android:id="@+id/message_send_time"/>
</RelativeLayout>