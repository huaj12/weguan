<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg" >
    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/user_logo"
        android:gravity="left" />

    <TextView
        android:id="@+id/user_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/user_logo"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="@color/gray" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_icon_arrow"
        android:contentDescription="@null" />
    
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="10dp" android:orientation="vertical">
    	<TextView android:layout_width="fill_parent"
            	  android:layout_height="wrap_content"
                  android:id="@+id/post_content"
                  android:textColor="@color/black"
                  android:textSize="14sp"
	    	  	  android:lineSpacingExtra="2dp"
                  android:layout_marginTop="10dp"
         />
    	 <ImageView android:layout_width="262dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
       	    	   android:id="@+id/post_image"
       	    	   android:contentDescription="@null"/>
    	    <LinearLayout
                android:id="@+id/post_detail_time_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/jzxq_icon_time" />

                <TextView
                    android:id="@+id/post_detail_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </LinearLayout>
   			<LinearLayout
                android:id="@+id/post_detail_place_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               	>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/jzxq_icon_des" />

                <TextView
                    android:id="@+id/post_detail_place_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </LinearLayout>

         
            <RelativeLayout android:layout_width="fill_parent"
                			android:layout_height="wrap_content"
                			android:layout_marginTop="10dp">
             <Button android:id="@id/post_interest"
                 	 android:layout_width="wrap_content" 
                 	 android:layout_height="wrap_content"
                 	 android:layout_alignParentLeft="true"
                 	 android:textColor="@color/post_detail_response_text_color_selector"
                 	 android:textSize="14sp"
                 	 android:paddingLeft="25dp"
                 	 android:background="@drawable/post_detail_interest_button"
                 	 />
             
              <Button android:layout_width="wrap_content" 
                 	 android:layout_height="wrap_content"
                 	 android:layout_alignParentRight="true"
                 	 android:textColor="@color/white"
                 	 android:textSize="14sp"
                 	 android:paddingLeft="25dp"
                 	 android:text="@string/contact"
                 	 android:background="@drawable/contact_selector_button"
                 	 />   
            </RelativeLayout>
     </LinearLayout>       
</LinearLayout>