<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout   
         xmlns:android="http://schemas.android.com/apk/res/android"   
         android:layout_height="fill_parent"   
         android:layout_width="fill_parent"
         android:background="@drawable/movie_selector_bg"
         android:orientation="vertical"
         >
         <RelativeLayout android:layout_width="fill_parent"
             			 android:layout_height="fill_parent"
             			 android:paddingRight="14dp"
             			 android:paddingLeft="14dp"
             			 android:paddingTop="21dp"
             			 android:paddingBottom="21dp"
             			 android:id="@+id/layout">
         <ImageView android:layout_width="wrap_content"
             		android:layout_height="wrap_content"
             		android:contentDescription="@null"
             		android:id="@+id/item_image"
             		android:layout_alignParentLeft="true"
             		android:layout_alignParentTop="true"/>
         <TextView android:layout_width="fill_parent"
             	   android:layout_height="wrap_content"
             	   android:textColor="@color/movie_text"
             	   android:textSize="16sp"
             	   android:id="@+id/item_text"
             	   android:paddingLeft="0dp"
             	   android:paddingRight="0dp"
             	   android:paddingBottom="0dp"
             	   android:paddingTop="3dp"
             	   android:layout_alignParentTop="true"
             	   android:singleLine="true"
             	   android:layout_toRightOf="@+id/item_image"
             	   android:layout_marginLeft="12dp"
             	   android:layout_marginTop="-5dp"
             	   />
         <ImageView android:layout_width="wrap_content"
             		android:layout_height="wrap_content"
             		android:layout_toRightOf="@+id/item_image"
             		android:layout_below="@+id/item_text" 
             		android:contentDescription="@null"
             		android:layout_marginLeft="12dp"
             		android:layout_marginTop="8dp"
             		android:id="@+id/item_tag"
             		/>
         <TextView android:layout_width="wrap_content"
             	   android:layout_height="wrap_content"
             	   android:layout_below="@+id/item_text"
             	   android:textColor="@color/movie_time"
             	   android:layout_toRightOf="@+id/item_tag"
             	   android:layout_marginLeft="12dp"
             	   android:layout_marginTop="8dp"
             	   android:drawableLeft="@drawable/time"
             	   android:drawablePadding="2dp"
             	   android:id="@+id/item_time"/>
         </RelativeLayout>
         <include layout="@layout/fragment_divider"  />
</LinearLayout>  