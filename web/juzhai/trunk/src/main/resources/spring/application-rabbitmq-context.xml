	<!-- update act feed-->
	<rabbit:queue name="${rabbitmq.queue.updateActFeed}" />
	<rabbit:direct-exchange name="${rabbitmq.exchange.updateActFeed}">
		<rabbit:bindings>
			<rabbit:binding queue="${rabbitmq.queue.updateActFeed}"/>
		</rabbit:bindings>
	</rabbit:direct-exchange>
	<rabbit:template id="updateActFeedRabbitTemplate"
		connection-factory="rabbitConnectionFactory"
		exchange="${rabbitmq.exchange.updateActFeed}"
		queue="${rabbitmq.queue.updateActFeed}"
		routing-key="${rabbitmq.queue.updateActFeed}"/>
	<bean id="updateActFeedListener" class="org.springframework.amqp.rabbit.listener.adapter.MessageListenerAdapter">
		<property name="delegate" ref="updateActFeedMessageListener" />
	</bean>
	<rabbit:listener-container connection-factory="rabbitConnectionFactory" concurrency="${rabbitmq.concurrency.updateActFeed}" prefetch="${rabbitmq.prefetch.updateActFeed}" >
	    <rabbit:listener queue-names="${rabbitmq.queue.updateActFeed}" ref="updateActFeedListener" />
	</rabbit:listener-container>
