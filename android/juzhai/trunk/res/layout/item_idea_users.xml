<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_idea_user_color_bg"
>
			<ImageView android:id="@+id/user_logo"
			    android:layout_alignParentLeft="true"
		        android:layout_width="60dp"  android:layout_height="60dp" android:layout_margin="10dp"
		        android:layout_centerInParent="true"
		        android:background="@drawable/user_face_unload"
		        />
        	 <TextView android:layout_height="wrap_content"
            	  android:gravity="left"
            	  android:layout_toRightOf="@+id/user_logo"
            	  android:layout_width="fill_parent"
            	  android:id="@+id/user_nickname"
            	  android:layout_marginLeft="10dp"
            	  android:layout_marginTop="10dp"
            	 />
             <TextView android:layout_height="wrap_content"
            	  android:layout_width="fill_parent"
            	  android:gravity="left"
            	  android:layout_toRightOf="@+id/user_logo"
            	  android:textColor="@color/gray"
            	  android:id="@+id/user_info"
            	  android:layout_marginLeft="10dp"
            	  android:layout_marginTop="35dp"
            	  />
			<Button      android:id="@+id/about_btn"
			    		 android:gravity="right"
			    		 android:paddingRight="10dp"
			    		 android:paddingTop="6dp"
			    		 android:layout_height="wrap_content"
            	 		 android:layout_width="wrap_content"
            	 		 android:textSize="12sp"
            	 		 android:layout_alignParentRight="true"
            	 		 android:layout_centerVertical="true"
            	 		 android:layout_marginRight="10dp"
			    />
</RelativeLayout>