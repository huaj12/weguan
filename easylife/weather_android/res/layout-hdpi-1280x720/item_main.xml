<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout   
         xmlns:android="http://schemas.android.com/apk/res/android"   
         android:layout_height="fill_parent"   
         android:paddingBottom="4dp"
         android:layout_width="fill_parent"
         >
         <RelativeLayout android:layout_height="wrap_content"
             			 android:layout_width="fill_parent"
             			 android:layout_weight="1"
             			 android:gravity="center_horizontal"
             			 android:layout_marginTop="70dp" 
             			 >
	        <ImageView   
	               android:layout_height="wrap_content"   
	               android:id="@+id/l_item_image"   
	               android:layout_width="wrap_content"   
	               android:layout_centerInParent="true">   
	         </ImageView>
	         <TextView   
	               android:layout_width="wrap_content"   
	               android:layout_below="@+id/l_item_image"   
	               android:layout_height="wrap_content"   
	               android:layout_centerHorizontal="true"   
	               android:textColor="@color/white"
	               android:textSize="14sp"
	               android:layout_marginTop="10dp"
	               android:id="@+id/l_item_text">  
	         </TextView>
         </RelativeLayout>
          <RelativeLayout android:layout_height="wrap_content"
             			 android:layout_width="fill_parent"
             			 android:layout_weight="1"
             			 android:gravity="center_horizontal"
             			 android:layout_marginTop="70dp" 
             			 >
	         
	          <ImageView   
	               android:layout_height="wrap_content"   
	               android:id="@+id/r_item_image"   
	               android:layout_width="wrap_content"   
	               android:layout_centerInParent="true">   
	         </ImageView>
	         <TextView android:layout_width="wrap_content"
	             	   android:layout_height="wrap_content"
	             	   android:id="@+id/tmp_item_icon"
	             	   android:textSize="74sp"
	             	   android:padding="0dp"
	             	   android:layout_centerInParent="true"
	             	   android:textColor="@color/white"
	             	   android:textStyle="bold"
	             	   android:includeFontPadding="false"
	             	   android:visibility="gone"
	             	   />
	         <TextView   
	               android:layout_width="wrap_content"   
	               android:layout_below="@+id/tmp_item_icon" 
	               android:layout_height="wrap_content"   
	               android:layout_centerHorizontal="true"   
	               android:textColor="@color/white"
	               android:textSize="14sp"
	               android:visibility="gone"
	               android:layout_marginTop="2dp"
	               android:id="@+id/tmp_item_text">  
	         </TextView>
	         <TextView   
	               android:layout_width="wrap_content"   
	               android:layout_below="@+id/r_item_image"   
	               android:layout_height="wrap_content"   
	               android:layout_centerHorizontal="true"   
	               android:textColor="@color/white"
	               android:textSize="14sp"
	               android:layout_marginTop="10dp"
	               android:id="@+id/r_item_text">  
	         </TextView>
         </RelativeLayout>  
</LinearLayout>  