<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	<ImageView android:id="@+id/message_left_logo" 
	       android:layout_width="60dp"
    	   android:layout_height="60dp"
    	   android:background="@drawable/user_face_unload"
    	   android:layout_alignParentLeft="true" 
    	   android:layout_margin="10dp"/>
	<TextView android:layout_width="wrap_content"
	    	  android:layout_height="wrap_content"
	    	  android:id="@+id/message_left_content"
	    	  android:layout_toRightOf="@+id/message_left_logo"
	    	  android:background="@drawable/mess_send_ta_item_bg"/>
	<TextView android:layout_width="wrap_content"
	    	  android:layout_height="wrap_content"
	    	  android:id="@+id/message_rigth_content"
	    	  android:layout_toLeftOf="@+id/message_rigth_logo"
	    	  android:background="@drawable/mess_to_me_item_bg"/>
	<ImageView android:id="@+id/message_rigth_logo" 
	       android:layout_width="60dp"
    	   android:layout_height="60dp"
    	   android:background="@drawable/user_face_unload"
    	   android:layout_alignParentRight="true" 
    	   android:layout_margin="10dp"/>
	<TextView android:layout_width="wrap_content"
	    	  android:layout_height="wrap_content"
	    	  android:layout_alignParentBottom="true"
	    	  android:layout_centerHorizontal="true"
	    	  android:id="@+id/message_send_time"/>
</RelativeLayout>